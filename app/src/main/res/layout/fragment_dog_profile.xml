<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 犬型 -->
        <Spinner
            android:id="@+id/spinnerDogType"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <!-- 犬種 -->
        <Spinner
            android:id="@+id/spinnerBreed"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <!-- BCS 分數 -->
        <Spinner
            android:id="@+id/spinnerBCS"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <!-- 體重 -->
        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:hint="體重 (kg)"
            android:inputType="numberDecimal" />

        <!-- 年齡 -->
        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:hint="年齡 (歲)"
            android:inputType="number" />

        <!-- 過敏食物 -->
        <EditText
            android:id="@+id/etAllergy"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:hint="過敏食物（以逗號分隔）" />

        <!-- 疫苗 -->
        <Switch
            android:id="@+id/switchVaccine"
            android:layout_width="170dp"
            android:layout_height="52dp"
            android:text="是否完成疫苗" />

        <!-- 送出 -->

        <!-- 結果 -->

        <Button
            android:id="@+id/btnGenerateMeal"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:text="取得專屬配餐建議" />

        <TextView
            android:id="@+id/tvResult"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
