<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- 標題 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/photo_instruction"
            android:textColor="#5D4037"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- 影像預覽卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#E0CEC2"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFF3E0"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="#DDD"
                android:scaleType="centerCrop"
                android:contentDescription="@string/photo_preview_desc"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- 拍照按鈕（主色膠囊） -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTakePhoto"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/take_photo"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:cornerRadius="28dp"
            app:backgroundTint="#6D4C41"
            android:layout_marginBottom="20dp"/>

        <!-- 表單卡片（肋骨/腰部/腹部） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#E0CEC2"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFF3E0"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 肋骨 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ribs_label"
                    android:textColor="#6D4C41"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <Spinner
                        android:id="@+id/spinnerRibs"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="14dp"/>

                <!-- 腰部 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waist_label"
                    android:textColor="#6D4C41"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <Spinner
                        android:id="@+id/spinnerWaist"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="14dp"/>

                <!-- 腹部 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stomach_label"
                    android:textColor="#6D4C41"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <Spinner
                        android:id="@+id/spinnerStomach"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 分析按鈕 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnalyze"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/analyze_bcs"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:backgroundTint="#6D4C41"
            app:cornerRadius="28dp"/>
    </LinearLayout>
</ScrollView>
