<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="24dp"
    android:background="@android:color/transparent"
    tools:theme="@style/Theme.PetNutritionistApp">

    <!-- Drag handle（純裝飾：無障礙忽略） -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        android:alpha="0.35"
        android:layout_marginBottom="12dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        tools:ignore="ContentDescription" />

    <!-- Title -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weight_sheet_title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#5D4037"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp" />

    <!-- 日期 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDate"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_date"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#C7B5A8"
        app:hintTextColor="#6D4C41">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/md_theme_light_onSurface"
            android:textCursorDrawable="@null"
            android:paddingVertical="12dp"
            tools:text="2025-09-10" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 體重 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilWeight"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/hint_weight"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="#FFFFFF"
        app:boxStrokeColor="#C7B5A8"
        app:helperText="@string/weight_helper"
        app:hintTextColor="#6D4C41">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/md_theme_light_onSurface"
            android:textCursorDrawable="@null"
            android:paddingVertical="12dp"
            tools:text="9.6" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- BCS 選擇（1~9） -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeColor="#E0CEC2"
        app:strokeWidth="1dp"
        android:backgroundTint="#FFF3E0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvBcsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_bcs"
                android:textStyle="bold"
                android:textColor="#5D4037" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipBcs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleLine="false"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp">

                <!-- 使用共用樣式 + 字串資源 -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_1" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_2" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_3" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_4" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_5" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_6" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_7" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip8"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_8" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip9"
                    style="@style/Widget.BcsChip"
                    android:text="@string/bcs_9" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tvBcsHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_bcs_picker"
                android:textSize="12sp"
                android:textColor="@color/md_theme_light_onSurface"
                android:alpha="0.9"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 按鈕列 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="18dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/confirm"
            app:backgroundTint="@color/button_primary"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
