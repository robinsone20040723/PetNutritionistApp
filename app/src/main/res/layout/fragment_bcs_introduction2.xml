<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 標題 -->
        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bcs_result_title"
            android:textColor="#5D4037"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- 卡 1：偏瘦（黃色） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#F5E6A9"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFF3C4"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvThinTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bcs_group_thin_title"
                    android:textColor="#5D4037"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvThinBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bcs_group_thin_body"
                    android:textColor="#3E2723"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 卡 2：理想（綠色） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#B9E4C2"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#DCEFE1"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvIdealTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bcs_group_ideal_title"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvIdealBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bcs_group_ideal_body"
                    android:textColor="#1B5E20"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 卡 3：過重／肥胖（粉紅） -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeColor="#F2B6B6"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFD9D9"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvOverTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bcs_group_over_title"
                    android:textColor="#B71C1C"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvOverBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bcs_group_over_body"
                    android:textColor="#7F0000"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 底部按鈕 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrev"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_prev_intro"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            app:cornerRadius="28dp"
            app:backgroundTint="#6D4C41"/>
    </LinearLayout>
</ScrollView>
